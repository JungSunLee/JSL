<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mainbackground2"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="70dp"
        android:background="@drawable/channel_select1"
        android:orientation="vertical" >

        <Button
            android:id="@+id/button_channelexit"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="right"
            android:background="@drawable/channel_list2" />

        <Button
            android:id="@+id/button_channelstart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="160dp"
            android:background="@drawable/channel_list1" />

    </LinearLayout>
    
    

</LinearLayout>