<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:background="@drawable/quiz_background"
        android:orientation="vertical" >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/quiz_ask01" >

            <ProgressBar
                android:id="@+id/progressBar_quiz"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="95dp"
                android:max="30"
                android:progress="0"
                android:progressDrawable="@drawable/progress_bar_draw" />

            <TextView
                android:id="@+id/textView1_quiz"
                android:layout_width="265dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="65dp"
                android:layout_marginTop="35dp"
                android:text="최정 선수는 도루를 한다."
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#000000" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" 
            android:background="@drawable/ball_background">

            <Button
                android:id="@+id/button_home"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_marginTop="235dp"
                android:layout_marginLeft="130dp"
  
                android:text="H" />

            <Button
                android:id="@+id/button_firstbase"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_marginTop="190dp"
                android:layout_marginLeft="170dp"  
                android:background="#00000000"             
                android:text="1st B" />

            <Button
                android:id="@+id/button_secondbase"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_marginTop="145dp"
                android:layout_marginLeft="130dp"
                android:background="#00000000"
                android:text="2nd B" />

            <Button
                android:id="@+id/button_thirdbase"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_marginTop="190dp"
                android:layout_marginLeft="90dp"
                android:background="#00000000"
                android:text="3d B" />

        
        </FrameLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ad1"
        android:orientation="vertical" >

    </LinearLayout>

</LinearLayout>